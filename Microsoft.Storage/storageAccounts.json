{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.2.0",
  "parameters": {
    "name": {
      "type": "string",
      "maxLength": 63,
      "metadata": {
        "description": "Name for the storage account, must be lower case and globally unique"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": ["Standard_LRS", "Standard_GRS", "Standard_ZRS"],
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "SKU for the storage account"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope",
      "allowedValues": [
        "australiaeast",
        "australiasoutheast",
        "brazilsouth",
        "canadacentral",
        "canadaeast",
        "centralindia",
        "chinaeast",
        "chinanorth",
        "eastasia",
        "eastus",
        "germanycentral",
        "germanynortheast",
        "northeurope",
        "southcentralus",
        "southeastasia",
        "southindia",
        "westeurope",
        "westus"
      ],
      "metadata": {
        "description": "The location for the storage account"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment for the tags"
      }
    },
    "geography": {
      "type": "string",
      "metadata": {
        "description": "Geography for the tags"
      }
    },
    "region": {
      "type": "string",
      "metadata": {
        "description": "Region for the tags"
      }
    }
  },
  "variables": {
    "storageAccountName": "[tolower(parameters('name'))]"
  },
  "resources": [
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-10-01",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "StorageV2",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "[variables('storageAccountName')]",
        "environment": "[parameters('environment')]",
        "geography": "[parameters('geography')]",
        "region": "[parameters('region')]",
        "resourceGroup": "[resourceGroup().name]"
      },
      "properties": {
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "supportsHttpsTrafficOnly": true
      }
    }
  ],
  "outputs": {}
}
